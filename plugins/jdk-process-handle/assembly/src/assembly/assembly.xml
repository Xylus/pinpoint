<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>pinpoint-jdk-process-handle-plugin</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.navercorp.pinpoint:pinpoint-jdk-process-handle-plugin-base</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <scope>provided</scope>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.navercorp.pinpoint:pinpoint-jdk-process-handle-plugin-nine</include>
            </includes>
            <outputDirectory>META-INF/versions/9</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <scope>provided</scope>
            <unpackOptions>
                <excludes>
                    <exclude>/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>